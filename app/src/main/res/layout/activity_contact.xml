<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/logo_main"
        android:id="@+id/imageView2"
        android:layout_marginTop="14dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <View
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="3dp"
        android:id="@+id/view2"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp" />

    <ImageView
        android:layout_width="60dp"
        app:srcCompat="@drawable/ic_address"
        android:layout_marginStart="21dp"
        android:id="@+id/imageView4"
        android:layout_above="@+id/sendEmail"
        android:layout_alignStart="@+id/sendEmail"
        android:layout_marginBottom="48dp"
        android:layout_height="60dp" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/ic_dialer"
        android:id="@+id/imageView5"
        android:layout_below="@+id/view2"
        android:layout_alignStart="@+id/imageView4"
        android:layout_marginTop="27dp" />

    <TextView
        android:text="@string/vrt_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/phoneTxt"
        android:textColor="@color/textPrimary"
        android:textSize="30sp"
        android:layout_alignBottom="@+id/imageView5"
        android:layout_alignStart="@+id/imageView2"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="11dp" />

    <Button
        android:id="@+id/sendEmail"
        android:text="@string/contactUs_text"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:background="@drawable/buttonshape_send"
        android:layout_height="60dp"
        android:layout_marginBottom="31dp"
        android:layout_width="350dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Northpoint 2 (Exit 4, M50) NCT Centre Northpoint Business Park,Naul Rd,  Dublin"
        android:layout_height="wrap_content"
        android:id="@+id/addressTxt"
        android:textColor="@color/textPrimary"
        android:textSize="20sp"
        android:layout_width="250dp"
        android:layout_marginBottom="29dp"
        android:layout_above="@+id/sendEmail"
        android:layout_alignParentEnd="true" />

    <View
        android:background="@color/colorPrimary"
        android:layout_height="3dp"
        android:id="@+id/view3"
        android:layout_width="175dp"
        android:layout_alignBottom="@+id/phoneTxt"
        android:layout_alignStart="@+id/phoneTxt" />

</RelativeLayout>