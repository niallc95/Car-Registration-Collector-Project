<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mobileapp.assignment.mobileappproject">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".Activities.Splash"
            android:theme="@style/SplashTheme"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name=".Activities.CalculatorActivity"
            android:label="@string/vrt_calculator"
            android:parentActivityName=".Activities.MainActivity">
        </activity>

        <activity
            android:name=".Activities.SearchRegActivity"
            android:label="@string/search_reg"
            android:parentActivityName=".Activities.MainActivity">
        </activity>

        <activity
            android:name=".Activities.AddRegActivity"
            android:label="@string/add_reg"
            android:parentActivityName=".Activities.MainActivity">
        </activity>

    </application>

</manifest>